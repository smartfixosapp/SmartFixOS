{
  "name": "Transaction",
  "type": "object",
  "properties": {
    "order_id": {
      "type": "string",
      "description": "Related order ID"
    },
    "order_number": {
      "type": "string",
      "description": "Order number for quick reference"
    },
    "type": {
      "type": "string",
      "enum": [
        "revenue",
        "expense",
        "refund"
      ],
      "description": "Transaction type"
    },
    "amount": {
      "type": "number",
      "description": "Transaction amount"
    },
    "description": {
      "type": "string",
      "description": "Transaction description"
    },
    "category": {
      "type": "string",
      "enum": [
        "repair_payment",
        "parts",
        "supplies",
        "other_expense",
        "refund"
      ],
      "description": "Transaction category"
    },
    "payment_method": {
      "type": "string",
      "enum": [
        "cash",
        "card",
        "transfer"
      ],
      "description": "Payment method"
    },
    "recorded_by": {
      "type": "string",
      "description": "Employee who recorded the transaction"
    }
  },
  "required": [
    "type",
    "amount",
    "category"
  ]
}
