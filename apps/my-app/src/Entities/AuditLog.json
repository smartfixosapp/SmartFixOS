{
  "name": "AuditLog",
  "type": "object",
  "description": "Registro de auditoría de todas las acciones del sistema",
  "properties": {
    "action": {
      "type": "string",
      "description": "Acción realizada (create, update, delete, status_change, etc)"
    },
    "entity_type": {
      "type": "string",
      "enum": [
        "order",
        "sale",
        "transaction",
        "cash_register",
        "product",
        "customer",
        "user",
        "inventory",
        "config",
        "file_upload",
        "email",
        "notification"
      ],
      "description": "Tipo de entidad afectada"
    },
    "entity_id": {
      "type": "string",
      "description": "ID de la entidad (UUID o identificador único)"
    },
    "entity_number": {
      "type": "string",
      "description": "Número legible (order_number, sale_number, etc)"
    },
    "user_id": {
      "type": "string",
      "description": "ID del usuario que realizó la acción (null para acciones automáticas)"
    },
    "user_name": {
      "type": "string",
      "description": "Nombre del usuario (null para acciones automáticas)"
    },
    "user_role": {
      "type": "string",
      "description": "Rol del usuario (admin, manager, technician, etc)"
    },
    "changes": {
      "type": "object",
      "description": "Cambios realizados con formato { before: {...}, after: {...} }",
      "properties": {
        "before": {
          "type": "object",
          "description": "Estado anterior",
          "additionalProperties": true
        },
        "after": {
          "type": "object",
          "description": "Estado nuevo",
          "additionalProperties": true
        }
      },
      "additionalProperties": true
    },
    "ip_address": {
      "type": "string",
      "description": "IP desde donde se realizó la acción"
    },
    "user_agent": {
      "type": "string",
      "description": "User agent del navegador"
    },
    "metadata": {
      "type": "object",
      "description": "Metadata adicional contextual",
      "additionalProperties": true
    },
    "severity": {
      "type": "string",
      "enum": [
        "info",
        "warning",
        "error",
        "critical"
      ],
      "default": "info",
      "description": "Severidad del evento"
    }
  },
  "required": [
    "action",
    "entity_type"
  ]
}
