{
  "name": "BiometricCredential",
  "type": "object",
  "description": "Credenciales biométricas por dispositivo para login rápido",
  "properties": {
    "user_id": {
      "type": "string",
      "description": "ID del usuario asociado"
    },
    "user_name": {
      "type": "string",
      "description": "Nombre del usuario (cache)"
    },
    "device_id": {
      "type": "string",
      "description": "Identificador único del dispositivo"
    },
    "device_fingerprint": {
      "type": "string",
      "description": "Huella digital del dispositivo (hash)"
    },
    "credential_id": {
      "type": "string",
      "description": "ID de la credencial biométrica (WebAuthn)"
    },
    "public_key": {
      "type": "string",
      "description": "Clave pública de la credencial"
    },
    "device_info": {
      "type": "object",
      "description": "Información del dispositivo",
      "properties": {
        "platform": {
          "type": "string"
        },
        "browser": {
          "type": "string"
        },
        "os": {
          "type": "string"
        }
      }
    },
    "last_used": {
      "type": "string",
      "format": "date-time",
      "description": "Última vez que se usó esta credencial"
    },
    "active": {
      "type": "boolean",
      "default": true,
      "description": "Si la credencial está activa"
    }
  },
  "required": [
    "user_id",
    "device_id",
    "credential_id",
    "public_key"
  ]
}
