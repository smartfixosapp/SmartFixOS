{
  "name": "SequenceCounter",
  "type": "object",
  "description": "Contadores de secuencias para autogeneración de números únicos",
  "properties": {
    "sequence_type": {
      "type": "string",
      "enum": [
        "order",
        "sale",
        "invoice",
        "purchase_order"
      ],
      "description": "Tipo de secuencia"
    },
    "period_type": {
      "type": "string",
      "enum": [
        "daily",
        "monthly",
        "yearly"
      ],
      "default": "daily",
      "description": "Tipo de periodo para el contador"
    },
    "period_key": {
      "type": "string",
      "description": "Clave del periodo (ej: 2025-01-16, 2025-01, 2025)"
    },
    "current_count": {
      "type": "number",
      "default": 0,
      "description": "Contador actual para este periodo"
    },
    "last_number": {
      "type": "string",
      "description": "Último número generado"
    },
    "last_incremented_at": {
      "type": "string",
      "format": "date-time",
      "description": "Última vez que se incrementó"
    }
  },
  "required": [
    "sequence_type",
    "period_type",
    "period_key"
  ]
}
