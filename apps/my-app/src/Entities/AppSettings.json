{
  "name": "AppSettings",
  "type": "object",
  "description": "Configuración general de la aplicación",
  "properties": {
    "slug": {
      "type": "string",
      "description": "Identificador único de la configuración (ej: app-main-settings)"
    },
    "payload": {
      "type": "object",
      "additionalProperties": true,
      "description": "Objeto JSON con toda la configuración de la app"
    },
    "description": {
      "type": "string",
      "description": "Descripción de esta configuración"
    }
  },
  "required": [
    "slug",
    "payload"
  ]
}
