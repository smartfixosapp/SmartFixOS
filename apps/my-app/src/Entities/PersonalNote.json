{
  "name": "PersonalNote",
  "type": "object",
  "description": "Notas y recordatorios personales del empleado con tareas pendientes",
  "properties": {
    "title": {
      "type": "string",
      "description": "Título de la nota"
    },
    "description": {
      "type": "string",
      "description": "Descripción o detalles de la tarea"
    },
    "type": {
      "type": "string",
      "enum": [
        "reminder",
        "callback",
        "task",
        "note"
      ],
      "default": "note",
      "description": "Tipo de nota"
    },
    "priority": {
      "type": "string",
      "enum": [
        "low",
        "medium",
        "high",
        "urgent"
      ],
      "default": "medium",
      "description": "Prioridad de la nota"
    },
    "status": {
      "type": "string",
      "enum": [
        "pending",
        "in_progress",
        "completed",
        "cancelled"
      ],
      "default": "pending",
      "description": "Estado de la tarea"
    },
    "due_date": {
      "type": "string",
      "format": "date-time",
      "description": "Fecha y hora de vencimiento"
    },
    "completed_at": {
      "type": "string",
      "format": "date-time",
      "description": "Fecha de completado"
    },
    "linked_order_id": {
      "type": "string",
      "description": "ID de orden relacionada"
    },
    "linked_order_number": {
      "type": "string",
      "description": "Número de orden relacionada"
    },
    "linked_customer_id": {
      "type": "string",
      "description": "ID de cliente relacionado"
    },
    "linked_customer_name": {
      "type": "string",
      "description": "Nombre de cliente relacionado"
    },
    "linked_customer_phone": {
      "type": "string",
      "description": "Teléfono de cliente relacionado"
    },
    "assigned_to": {
      "type": "string",
      "description": "ID del usuario asignado"
    },
    "assigned_to_name": {
      "type": "string",
      "description": "Nombre del usuario asignado"
    },
    "reminder_sent": {
      "type": "boolean",
      "default": false,
      "description": "Si se envió recordatorio"
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Tags para categorizar"
    }
  },
  "required": [
    "title",
    "type"
  ]
}
