{
  "name": "TechnicianProfile",
  "type": "object",
  "description": "Perfil extendido de técnicos con métricas y configuración",
  "properties": {
    "user_id": {
      "type": "string",
      "description": "ID del usuario (empleado) asociado"
    },
    "full_name": {
      "type": "string",
      "description": "Nombre completo del técnico (cache)"
    },
    "email": {
      "type": "string",
      "description": "Email del técnico (cache)"
    },
    "phone": {
      "type": "string",
      "description": "Teléfono del técnico"
    },
    "specializations": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Especializaciones (iPhone, Samsung, Laptop, etc.)"
    },
    "skills": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "skill_name": {
            "type": "string"
          },
          "level": {
            "type": "string",
            "enum": [
              "beginner",
              "intermediate",
              "advanced",
              "expert"
            ]
          },
          "certified": {
            "type": "boolean",
            "default": false
          }
        }
      },
      "description": "Habilidades y nivel de experiencia"
    },
    "certifications": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "issuer": {
            "type": "string"
          },
          "issued_date": {
            "type": "string",
            "format": "date"
          },
          "expiry_date": {
            "type": "string",
            "format": "date"
          },
          "certificate_url": {
            "type": "string"
          },
          "verified": {
            "type": "boolean",
            "default": false
          }
        }
      },
      "description": "Certificaciones profesionales"
    },
    "performance_metrics": {
      "type": "object",
      "properties": {
        "total_jobs": {
          "type": "number",
          "default": 0
        },
        "completed_jobs": {
          "type": "number",
          "default": 0
        },
        "avg_completion_time_hours": {
          "type": "number",
          "default": 0
        },
        "avg_customer_rating": {
          "type": "number",
          "default": 0,
          "minimum": 0,
          "maximum": 5
        },
        "total_ratings": {
          "type": "number",
          "default": 0
        },
        "success_rate": {
          "type": "number",
          "default": 0,
          "minimum": 0,
          "maximum": 100
        },
        "on_time_delivery_rate": {
          "type": "number",
          "default": 0
        }
      },
      "description": "Métricas de rendimiento calculadas"
    },
    "availability": {
      "type": "object",
      "properties": {
        "status": {
          "type": "string",
          "enum": [
            "available",
            "busy",
            "offline",
            "on_break"
          ],
          "default": "available"
        },
        "weekly_schedule": {
          "type": "object",
          "properties": {
            "monday": {
              "type": "object",
              "properties": {
                "enabled": {
                  "type": "boolean"
                },
                "start": {
                  "type": "string"
                },
                "end": {
                  "type": "string"
                }
              }
            },
            "tuesday": {
              "type": "object",
              "properties": {
                "enabled": {
                  "type": "boolean"
                },
                "start": {
                  "type": "string"
                },
                "end": {
                  "type": "string"
                }
              }
            },
            "wednesday": {
              "type": "object",
              "properties": {
                "enabled": {
                  "type": "boolean"
                },
                "start": {
                  "type": "string"
                },
                "end": {
                  "type": "string"
                }
              }
            },
            "thursday": {
              "type": "object",
              "properties": {
                "enabled": {
                  "type": "boolean"
                },
                "start": {
                  "type": "string"
                },
                "end": {
                  "type": "string"
                }
              }
            },
            "friday": {
              "type": "object",
              "properties": {
                "enabled": {
                  "type": "boolean"
                },
                "start": {
                  "type": "string"
                },
                "end": {
                  "type": "string"
                }
              }
            },
            "saturday": {
              "type": "object",
              "properties": {
                "enabled": {
                  "type": "boolean"
                },
                "start": {
                  "type": "string"
                },
                "end": {
                  "type": "string"
                }
              }
            },
            "sunday": {
              "type": "object",
              "properties": {
                "enabled": {
                  "type": "boolean"
                },
                "start": {
                  "type": "string"
                },
                "end": {
                  "type": "string"
                }
              }
            }
          }
        },
        "current_capacity": {
          "type": "number",
          "default": 0,
          "description": "Número de trabajos actualmente asignados"
        },
        "max_capacity": {
          "type": "number",
          "default": 5,
          "description": "Máximo de trabajos simultáneos"
        }
      },
      "description": "Disponibilidad y horario"
    },
    "notification_preferences": {
      "type": "object",
      "properties": {
        "push_enabled": {
          "type": "boolean",
          "default": true
        },
        "email_enabled": {
          "type": "boolean",
          "default": true
        },
        "sms_enabled": {
          "type": "boolean",
          "default": false
        },
        "notify_on_assignment": {
          "type": "boolean",
          "default": true
        },
        "notify_on_urgent": {
          "type": "boolean",
          "default": true
        },
        "notify_on_message": {
          "type": "boolean",
          "default": true
        }
      },
      "description": "Preferencias de notificaciones"
    },
    "active": {
      "type": "boolean",
      "default": true,
      "description": "Si el técnico está activo"
    },
    "hire_date": {
      "type": "string",
      "format": "date",
      "description": "Fecha de contratación"
    },
    "employee_number": {
      "type": "string",
      "description": "Número de empleado"
    },
    "profile_photo_url": {
      "type": "string",
      "description": "URL de la foto de perfil"
    }
  },
  "required": [
    "user_id",
    "full_name"
  ]
}
