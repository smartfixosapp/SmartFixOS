{
  "name": "Sale",
  "type": "object",
  "description": "Ventas del POS con validaciones de montos y métodos de pago",
  "properties": {
    "sale_number": {
      "type": "string",
      "minLength": 3,
      "description": "Número de venta"
    },
    "customer_id": {
      "type": "string",
      "description": "ID del cliente"
    },
    "customer_name": {
      "type": "string",
      "description": "Nombre del cliente"
    },
    "items": {
      "type": "array",
      "minItems": 1,
      "description": "Items vendidos (al menos 1)",
      "items": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "enum": [
              "product",
              "service"
            ]
          },
          "id": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "quantity": {
            "type": "number",
            "minimum": 0
          },
          "price": {
            "type": "number",
            "minimum": 0
          },
          "discount": {
            "type": "number",
            "default": 0,
            "minimum": 0
          },
          "note": {
            "type": "string"
          },
          "total": {
            "type": "number",
            "minimum": 0
          }
        }
      }
    },
    "subtotal": {
      "type": "number",
      "minimum": 0,
      "description": "Subtotal sin IVU"
    },
    "tax_rate": {
      "type": "number",
      "minimum": 0,
      "maximum": 1,
      "default": 0.115,
      "description": "Tasa de IVU"
    },
    "tax_amount": {
      "type": "number",
      "minimum": 0,
      "description": "Monto de IVU"
    },
    "discount_amount": {
      "type": "number",
      "default": 0,
      "minimum": 0,
      "description": "Descuento aplicado"
    },
    "deposit_credit": {
      "type": "number",
      "default": 0,
      "minimum": 0,
      "description": "Crédito de depósito"
    },
    "total": {
      "type": "number",
      "minimum": 0,
      "description": "Total de la venta (debe ser >= 0)"
    },
    "amount_paid": {
      "type": "number",
      "minimum": 0,
      "description": "Monto pagado"
    },
    "amount_due": {
      "type": "number",
      "minimum": 0,
      "description": "Monto pendiente"
    },
    "payment_method": {
      "type": "string",
      "enum": [
        "cash",
        "card",
        "ath_movil",
        "transfer",
        "mixed"
      ],
      "description": "Método de pago (solo valores permitidos)"
    },
    "payment_details": {
      "type": "object",
      "description": "Detalles de pagos múltiples",
      "properties": {
        "methods": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "method": {
                "type": "string",
                "enum": [
                  "cash",
                  "card",
                  "ath_movil",
                  "transfer"
                ]
              },
              "amount": {
                "type": "number",
                "minimum": 0
              }
            }
          }
        },
        "change_given": {
          "type": "number",
          "minimum": 0,
          "description": "Cambio devuelto"
        }
      }
    },
    "employee": {
      "type": "string",
      "description": "Empleado que realizó la venta"
    },
    "order_id": {
      "type": "string",
      "description": "ID de orden relacionada"
    },
    "order_number": {
      "type": "string",
      "description": "Número de orden"
    },
    "voided": {
      "type": "boolean",
      "default": false,
      "description": "Si fue anulada"
    },
    "void_reason": {
      "type": "string",
      "description": "Razón de anulación"
    },
    "voided_by": {
      "type": "string",
      "description": "Usuario que anuló"
    },
    "voided_at": {
      "type": "string",
      "format": "date-time",
      "description": "Fecha de anulación"
    },
    "credit_note_id": {
      "type": "string",
      "description": "ID de nota de crédito"
    },
    "notes": {
      "type": "string",
      "description": "Notas de la venta"
    }
  },
  "required": [
    "sale_number",
    "items",
    "subtotal",
    "total",
    "payment_method",
    "employee"
  ]
}
