{
  "name": "DeviceSubcategory",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "Nombre de la subcategoría (Laptop, Desktop, Smartphone, Tablet, SmartWatch, etc.)"
    },
    "brand_id": {
      "type": "string",
      "description": "ID de la marca a la que pertenece"
    },
    "icon": {
      "type": "string",
      "description": "Ícono o emoji"
    },
    "icon_url": {
      "type": "string",
      "description": "URL del ícono"
    },
    "active": {
      "type": "boolean",
      "default": true
    },
    "order": {
      "type": "number",
      "description": "Orden de visualización"
    }
  },
  "required": [
    "name",
    "brand_id"
  ]
}
